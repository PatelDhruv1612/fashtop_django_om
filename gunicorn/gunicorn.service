[Unit]
Description=gunicorn daemon
Requires=gunicorn.socket
After=network.target

[Service]
User=ubuntu
Group=www-data
WorkingDirectory=/home/ubuntu/fashtop_django_om
ExecStart=/home/ubuntu/fashtop_django_om/venv/bin/gunicorn \
          --access-logfile - \
          --workers 3 \
          --bind unix:/run/gunicorn.sock \
          fashTOP.wsgi:application
Restart=always
RestartSec=5
[Install]
WantedBy=multi-user.target
